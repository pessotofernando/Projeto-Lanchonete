unit U_Pes_Endereco;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls, Grids, DBGrids, ExtCtrls, u_Frame_impressao, DB,
  AppEvnts, Mask;

type
  TFr_Pes_Endereco = class(TForm)
    Frame_Impressao1: TFrame_Impressao;
    Panel1: TPanel;
    DBGrid1: TDBGrid;
    GroupBox1: TGroupBox;
    ds_DEND01_SP_SEL: TDataSource;
    ApplicationEvents1: TApplicationEvents;
    Label1: TLabel;
    Label8: TLabel;
    Nome: TEdit;
    estado: TComboBox;
    Label2: TLabel;
    cep: TMaskEdit;
    procedure Frame_Impressao1BntFecharClick(Sender: TObject);
    procedure Frame_Impressao1BntLimpaClick(Sender: TObject);
    procedure CodigoExit(Sender: TObject);
    procedure descriExit(Sender: TObject);
    procedure FormCreate(Sender: TObject);
    procedure FormKeyDown(Sender: TObject; var Key: Word;
      Shift: TShiftState);
    procedure Frame_Impressao1BntGravaClick(Sender: TObject);
    procedure DBGrid1DblClick(Sender: TObject);
    procedure ApplicationEvents1Message(var Msg: tagMSG;
      var Handled: Boolean);
    procedure NomeExit(Sender: TObject);
    procedure DBGrid1KeyDown(Sender: TObject; var Key: Word;
      Shift: TShiftState);
    procedure cepExit(Sender: TObject);
    procedure estadoExit(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
    
    procedure retorna_endereco;
    procedure limpa_campos;
  end;

var
  Fr_Pes_Endereco: TFr_Pes_Endereco;
  var_fr_tecla  : string;

implementation


uses u_module,u_valida,u_rot_busca;
{$R *.dfm}

procedure TFr_Pes_Endereco.Frame_Impressao1BntFecharClick(Sender: TObject);
begin
   close;
end;

procedure TFr_Pes_Endereco.Frame_Impressao1BntLimpaClick(Sender: TObject);
begin
   limpa_campos;
   retorna_endereco;
end;

procedure TFr_Pes_Endereco.CodigoExit(Sender: TObject);
begin
   if var_fr_tecla <> '13' then exit;

   retorna_endereco;
end;

procedure TFr_Pes_Endereco.retorna_endereco;
var
   var_cep : string;
begin

   var_cep := cep.text;
   if cep.text = '     -   ' then var_cep := ' ';

   with Module.ENDERECO_SP_SEL do
   begin
      close;
      parambyname('@INP_CEP'     ).asstring := var_cep;
      parambyname('@INP_ENDERECO').asstring := nome.text;
      parambyname('@INP_ESTADO'  ).asstring := estado.Text;
      execproc;open;first;
   end;

end;

procedure TFr_Pes_Endereco.limpa_campos;
begin
   cep.Text    := '';
   estado.ItemIndex := 0;
   Nome.text    := '';

   activecontrol := cep;
end;

procedure TFr_Pes_Endereco.descriExit(Sender: TObject);
begin
   retorna_endereco;
end;

procedure TFr_Pes_Endereco.FormCreate(Sender: TObject);
begin
   Frame_Impressao1BntLimpaClick(Frame_Impressao1.BntLimpa);
end;

procedure TFr_Pes_Endereco.FormKeyDown(Sender: TObject; var Key: Word;
  Shift: TShiftState);
begin

   if ((var_fr_tecla = '27') and (key = 27)) then close;

   var_fr_tecla :=  inttostr(key);

   if key = 13 then SelectNext(activecontrol,true,true);
   if key = 27 then Frame_Impressao1BntLimpaClick(Frame_Impressao1.BntLimpa);
   if key = 38 then SelectNext(activecontrol,false,true);


   if key = Vk_f5 then Frame_Impressao1BntGravaClick(Frame_Impressao1.BntGrava);
   if key = Vk_F12 then close;
end;

procedure TFr_Pes_Endereco.Frame_Impressao1BntGravaClick(Sender: TObject);
begin

   if not Module.ENDERECO_SP_SEL.active then exit;
   if Module.ENDERECO_SP_SEL.FieldByName('END_CEP').asstring = '' then exit;

   paramentros[1] := Module.ENDERECO_SP_SEL.fieldbyname('END_CEP').asstring;

   close;
end;

procedure TFr_Pes_Endereco.DBGrid1DblClick(Sender: TObject);
begin
   Frame_Impressao1BntGravaClick(Frame_Impressao1.BntGrava);
end;

procedure TFr_Pes_Endereco.ApplicationEvents1Message(var Msg: tagMSG;var Handled: Boolean);
var
  i : Smallint;
begin
   case Msg.Message of WM_KEYDOWN:
   begin
      if (Msg.wParam = VK_TAB) then var_fr_tecla := '13';
    end;
  end;

  // rolagem do scroll do mouse no DBGrid
  if Msg.message = WM_MOUSEWHEEL then
  begin
     Msg.message := WM_KEYDOWN;
     Msg.lParam := 0;

     i := HiWord(Msg.wParam);

     if i > 0 then Msg.wParam := VK_UP
     else
     Msg.wParam := VK_DOWN;
     Handled := False;
  end;

end;


procedure TFr_Pes_Endereco.NomeExit(Sender: TObject);
begin
   retorna_endereco;
end;

procedure TFr_Pes_Endereco.DBGrid1KeyDown(Sender: TObject; var Key: Word;
  Shift: TShiftState);
begin
   if key = 13 then  Frame_Impressao1BntGravaClick(Frame_Impressao1.BntGrava);
end;

procedure TFr_Pes_Endereco.cepExit(Sender: TObject);
begin
   retorna_endereco;
end;

procedure TFr_Pes_Endereco.estadoExit(Sender: TObject);
begin
   retorna_endereco;
end;

end.
